<% action_for_button = action_name === "edit" ? "Update my HSA Info" : "Submit" %>

<br/>
<div class="panel panel-primary">
  <div class="panel-heading">
    <% if action_name === "edit" %>
      <i><%= @health_savings_account.user.first_name %> <%= @health_savings_account.user.last_name %></i> (<b><%= @health_savings_account.user.last_name %></b>)
      <p class="pull-right"><%= link_to "Back to HSA Info", edit_health_savings_account_path(@health_savings_account) %></p>
    <% else %>
      <i><b>HSA Bank Info</b></i>
    <% end %>
  </div>
  <div class="panel panel-body">
    <%= simple_form_for(@health_savings_account, html: {class: "form", multipart: true}) do |f| %>
      <%= f.error_notification %>
      <%= f.input :user_id, as: :hidden, input_html: { value: current_user.id } %>

      <div class="">
        <div class='form-group col-sm-12'>
          <%= f.input :account_number, autocomplete: 'on', label: 'Account #',
           placeholder: '00000000', required: true, input_html: {class: 'form-control'} %>
        </div>

        <div class='form-group col-sm-12'>
          <%= f.input :routing_number, autocomplete: 'on', label: 'Routing #',
           placeholder: '00000000', required: true, input_html: {class: 'form-control'} %>
        </div>

        <div class='form-group col-sm-12'>
          <%= f.input :account_name, autocomplete: 'on', label: 'Full Name on Account',
           placeholder: 'Timmy DoGood', required: true, input_html: {class: 'form-control'} %>
        </div>

        <div class='form-group col-sm-12'>
          <br/>
          <%= f.button :submit, action_for_button, class: 'btn btn-primary btn-lg btn-block' %>
        </div>
      </div>
    <% end %>
  </div>

</div>

