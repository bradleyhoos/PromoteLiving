<div class='row'>
  <div class='col-md-8 col-md-4 col-md-offset-4'>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-vertical"}) do |f| %>
      <div><h2>Sign in</h2></div>
      <fieldset>
        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>"/>
        <div class='form-group col-sm-10'>
          <%= f.input :email, required: true, autofocus: true, maxlength: 50, label_html: {class: 'control-label col-md-8'} %>
        </div>
        <div class='form-group col-sm-10'>
          <%= f.input :password, required: true, maxlength: 50, label_html: {class: 'control-label col-md-8'} %>
        </div>

        <div class='form-group col-sm-10'>
          <% if devise_mapping.rememberable? -%>
            <%= f.input :remember_me, as: :boolean %>
          <% end -%>
          <%= f.button :submit, 'Sign In', class: 'btn btn-primary btn-lg' %>
        </div>
      </fieldset>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
