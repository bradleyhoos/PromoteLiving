<h2>Sign up</h2>
<div class='row'>
  <div class='col-md-8 col-md-4 col-md-offset-4'>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "form-vertical"}) do |f| %>
      <%= f.error_notification %>
      <div><h2>Sign Up</h2></div>
      <fieldset>
        <%= hidden_field_tag 'plan', @plan %>
        <div class='form-group col-sm-10'>
          <%= f.input :email, required: true, autofocus: true, label_html: {class: 'control-label col-md-8'} %>
        </div>
        <div class='form-group col-sm-10'>
          <%= f.input :password, required: true, label_html: {class: 'control-label col-md-8'} %>
          <% if @validatable %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <!-- <br /> -->
        </div>
        <div class='form-group col-sm-10'>
          <%= f.input :password_confirmation, required: true, label_html: {class: 'control-label col-md-8'} %>
        </div>
        <div class='form-group col-sm-10'>
          <%= f.button :submit, 'Sign Up', class: 'btn btn-primary btn-lg' %>
        </div>
        <div class='form-group col-sm-10'>
          <p class="small"> By signing up, you're agreeing with the <a href="/tos">Terms and Conditions</a>.</p>
          <%= render "devise/shared/links" %>
        </div>
      </fieldset>
    <% end %>
  </div>
</div>
