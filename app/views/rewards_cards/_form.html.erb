<% action_for_button = action_name === "edit" ? "Update my Rewards Card" : "Submit" %>

<br/>
<div class="panel panel-primary">
  <div class="panel-heading">
    <% if action_name === "edit" %>
      <i><b><%= @rewards_card.retailer.name %></b></i>
      <p class="pull-right"><%= link_to "Back to Rewards Card", edit_rewards_card_path(@rewards_card) %></p>
    <% else %>
      <i>Link your Rewards Card for <b><%= @rewards_card.retailer.name %></b></i>
    <% end %>
  </div>
  <div class="panel-body">
    <div class="media" id='retailer-logo'>
      <div class="media-left media-middle">
        <a href="#">
          <img class='media-object' src='http://placehold.it/350x150' alt='Retailer Card Logo'>
        </a>
      </div>
      <div class='media-body'>
        <!-- <h4 class="media-heading">Media heading</h4> -->
        <%= simple_form_for(@rewards_card, html: {class: 'form', multipart: true}) do |f| %>
          <%= f.error_notification %>
          <%= f.input :retailer_id, as: :hidden, input_html: { value: @rewards_card.retailer.id } %>
          <div class=''>
            <div class='form-group col-sm-12'>
              <%= f.input :rewards_number, autocomplete: 'on', label: 'Rewards Number',
               placeholder: '00000000', required: true, input_html: {class: 'form-control'} %>
            </div>

            <div class='form-group col-sm-12'>
              <br/>
              <%= f.button :submit, action_for_button, class: 'btn btn-primary btn-lg btn-block' %>
            </div>
          </div>
        <% end %>

      </div>
    </div>

  </div>

  <div class="panel-footer">
    Link your card to get $10 contributed towards your HSA for every $100 in healthy spend.
  </div>

</div>
